<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ilyesabdlillah.envio00114.MainActivity"
    android:background="#212121">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/MainView"
            android:layout_below="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="396dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                android:background="#ffffff"
                android:layout_gravity="right"
                android:height="1px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Living Room"
                android:id="@+id/textView5"
                android:textColor="#ffffff"
                android:textIsSelectable="false"
                android:textSize="84px"
                android:textStyle="bold"
                android:layout_marginTop="18px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Temperature selected (°C)"
                android:id="@+id/textView2"
                android:textSize="35px"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="--.-"
                android:id="@+id/Temperature"
                android:textSize="200px"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_min="16"
                app:dsb_max="30"
                android:id="@+id/SeekbarTemp"
                app:dsb_indicatorColor="#ff6403"
                app:dsb_trackColor="#ff8e3c"
                app:dsb_progressColor="#ff6403"
                android:layout_below="@+id/Temperature"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Luminosity (%)"
                android:id="@+id/textView3"
                android:textSize="35px"
                android:textColor="#ffffff"
                android:layout_below="@+id/SeekbarTemp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="--.-"
                android:id="@+id/Luminosity"
                android:textSize="200px"
                android:textColor="#003737"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true" />

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_min="0"
                app:dsb_max="100"
                app:dsb_indicatorColor="#00cccc"
                app:dsb_trackColor="#00bbbb"
                app:dsb_progressColor="#008C8C"
                android:id="@+id/SeekbarLum"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="18px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:id="@+id/textView4"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Actual conditions"
                android:id="@+id/textView6"
                android:textSize="84px"
                android:textColor="#ffffff"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Location"
                android:id="@+id/locationCity"
                android:textSize="35px"
                android:textColor="#ffffff"
                android:layout_weight="0.51"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Temperature Outside (°C)"
                android:id="@+id/textView8"
                android:textSize="35px"
                android:textColor="#ffffff"
                android:layout_weight="0.51"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="--.-"
                android:id="@+id/currentTemp"
                android:textSize="200px"
                android:textColor="#ffffff"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Luminosity Outside (UV Level)"
                android:id="@+id/textView7"
                android:textSize="35px"
                android:textColor="#ffffff"
                android:layout_weight="0.51"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="--.-"
                android:id="@+id/uvLevel"
                android:textSize="200px"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/currCondtions"
                android:textSize="37px"
                android:textColor="#ffffff"
                android:layout_weight="0.51"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-8dp" />


        </LinearLayout>

</ScrollView>



